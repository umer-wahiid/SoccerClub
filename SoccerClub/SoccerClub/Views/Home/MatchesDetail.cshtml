@model SoccerClub.Models.Match

@{
    ViewData["Title"] = "MatchesDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- breadcrumb -->
<div class="breadcrumb-main">
    <div class="container">
        <div class="breadcrumb-container">
            <h2 class="page-title">Match Details</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">
                        Home
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Match Details</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- main -->
<main>
    <div class="common-home">
        <div id="content" class="col">
            <div class="container">
                <div class="schedule-section mt-50  wow fadeInUp">
                    <div class="box-content">
                        <div class="row match-details-section1">
                            <div class="col-sm-6 about-left">
                                <h2 style="color:#F22361;margin-left:15px;">@Html.DisplayFor(model => model.League)</h2>
                                @*<p>
                                    Lorem Ipsum is simply dummy text of the printing and typesetting industry.
                                    Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when
                                    an unknown printer took a galley of type and scrambled it to make a type specimen
                                    book.
                                </p>*@
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Date)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Model.Date.ToShortDateString()
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.HomeTeam)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.HomeTeam.Name)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.AwayTeam)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.AwayTeam.Name)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Venue)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Venue)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Season)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Season)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.League)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.League)
                                        </dd>
                                    </dl>
                                </div>
                               
                            </div>
                            <div class="col-sm-6 about-right">
                                <article class="game-result">
                                    <div class="game-info game-info-creative text-center">
                                        <div>
                                            <div class="game-info-main">
                                                <div class="game-info-team game-info-team-first">
                                                    <div class="game-info-logo">
                                                        <figure>
                                                            <a href="#">
                                                                <img src="@Model.HomeTeam.LogoUrl" alt="match">
                                                            </a>
                                                        </figure>
                                                    </div>
                                                    <div class="team-name">
                                                        <h6>@Model.HomeTeam.Name</h6>
                                                    </div>
                                                </div>
                                                <div>VS</div>
                                                <div class="game-info-team game-info-team-second">
                                                    <div class="game-info-logo">
                                                        <figure>
                                                            <a href="#">
                                                                <img src="@Model.AwayTeam.LogoUrl" alt="match">
                                                            </a>
                                                        </figure>
                                                    </div>
                                                    <div class="team-name">
                                                        <h6>@Model.AwayTeam.Name</h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        </div>
                        <!-- news -->
                        <div class="news mt-50 wow fadeInUp">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>