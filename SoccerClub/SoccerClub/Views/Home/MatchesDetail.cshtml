<!-- main -->
<main>
    <div class="common-home">
        <div id="content" class="col">
            <div class="container">
                <div class="schedule-section mt-50  wow fadeInUp">
                    <div class="box-content">
                        <div class="row match-details-section1">
                            <div class="col-sm-6 about-left">
                                
                                <h2 style="color:#F22361;margin-left:15px;">
                                    @Html.DisplayFor(model => model.Match.League) @if (Session.UserId != 0)
                                    {
                                        <a style="padding-left:50px;" title="Set Reminder" href="@Url.Action("CreateReminder", "Home", new { matchid = Model.Match.MatchId })"><i style="font-size:30px;color:white;" class="fas fa-bell"></i></a>
                                    }
                                </h2>

                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Match.Date)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Model.Match.Date.ToShortDateString()
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Match.HomeTeam)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Match.HomeTeam.Name)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Match.AwayTeam)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Match.AwayTeam.Name)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Match.Venue)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Match.Venue)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Match.Season)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Match.Season)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Match.League)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Match.League)
                                        </dd>
                                    </dl>
                                </div>

                            </div>
                            <div class="col-sm-6 about-right">
                                <article class="game-result">
                                    <div class="game-info game-info-creative text-center">
                                        <div>
                                            <div class="game-info-main">
                                                <div class="game-info-team game-info-team-first">
                                                    <div class="game-info-logo">
                                                        <figure>
                                                            <a href="#">
                                                                <img src="@Model.Match.HomeTeam.LogoUrl" alt="match">
                                                            </a>
                                                        </figure>
                                                    </div>
                                                    <div class="team-name">
                                                        <h6>@Model.Match.HomeTeam.Name</h6>
                                                    </div>
                                                </div>
                                                <div>VS</div>
                                                <div class="game-info-team game-info-team-second">
                                                    <div class="game-info-logo">
                                                        <figure>
                                                            <a href="#">
                                                                <img src="@Model.Match.AwayTeam.LogoUrl" alt="match">
                                                            </a>
                                                        </figure>
                                                    </div>
                                                    <div class="team-name">
                                                        <h6>@Model.Match.AwayTeam.Name</h6>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        </div>
                        <div class="row match-details-section3">
                            <div class="col-sm-6 inner-details">
                                <div class="head-1">@Model.Match.HomeTeam.Name</div>
                                @foreach (var item in Model.player)
                                {
                                    <div class="row matche-1">
                                        <div class="col-6 matches-team-left ">
                                            <div class="date-time">
                                                <i class="fa-regular fa-calendar-days d-none"></i>
                                                <div class="blog-date">@m</div>
                                            </div>
                                            <div class="name">
                                                @item.Name
                                                <p>@item.Position</p>
                                            </div>
                                        </div>
                                        <div class="matches-team-right col-6">
                                            <div class="match-location">
                                                <img src="assets/images/gaming/ChildrenBall.png" alt="">
                                            </div>
                                        </div>
                                    </div>
                                    m++;
                                }
                            </div>
                            <!--  -->
                            <div class="col-sm-6 inner-details">
                                <div class="head-1">@Model.Match.AwayTeam.Name</div>
                                @foreach (var item in Model.awayplayer)
                                {
                                    <div class="row matche-1">
                                        <div class="col-6 matches-team-left ">
                                            <div class="date-time">
                                                <i class="fa-regular fa-calendar-days d-none"></i>
                                                <div class="blog-date">@n</div>
                                            </div>
                                            <div class="name">
                                                @item.Name
                                                <p>@item.Position</p>
                                            </div>
                                        </div>
                                        <div class="matches-team-right col-6">
                                            <div class="match-location">
                                                <img src="assets/images/gaming/ChildrenBall.png" alt="">
                                            </div>
                                        </div>
                                    </div>
                                    n++;
                                }
                            </div>
                        </div>
                        <!-- news -->
                        <div class="news mt-50 wow fadeInUp">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>