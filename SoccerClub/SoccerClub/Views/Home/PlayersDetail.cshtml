@model SoccerClub.Models.Player
@{
    ViewData["Title"] = "PlayersDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- breadcrumb -->
<div class="breadcrumb-main">
    <div class="container">
        <div class="breadcrumb-container">
            <h2 class="page-title">Players Details</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">
                        Home
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Players Details</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- main -->
<main>
    <div class="common-home">
        <div id="content" class="col">
            <div class="container">
                <div class="schedule-section mt-50  wow fadeInUp">
                    <div class="box-content">
                        <div class="row">
                            <div class="col-3 players-details-image">
                                <img src="@Model.PlayerImage" alt="" class="w-100">
                            </div>
                            <div class="col-8 players-details-bio">
                                <div class="fullname">
                                    <h2>@Model.Name</h2>
                                    <h6>@Model.Position</h6>
                                    <ul class="details-list">
                                        <li>Nationality : @Model.Nationality</li>
                                        <li>Date Of Birth : @Model.DOB.ToShortDateString()</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="news mt-50 wow fadeInUp">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>