@model IEnumerable<SoccerClub.Models.Article>
@{
	ViewData["Title"] = "Blog";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- breadcrumb -->
<div class="breadcrumb-main">
	<div class="container">
		<div class="breadcrumb-container">
			<h2 class="page-title">Blog</h2>
			<ul class="breadcrumb">
				<li class="breadcrumb-item">
					<a href="index.html">
						Home
					</a>
				</li>
				<li class="breadcrumb-item">
					<a href="#">Blog</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<main>
	<div class="common-home">
		<div id="content" class="col">
			<div class="blog-section mt-50  wow fadeInUp">
				<div class="box-content">
					<div class="container">
						<div class="page-title toggled">
							<span class="page-title-left"></span>
							<h3>
								Latest Blog
							</h3>
							<span class="page-title-right"></span>
						</div>
						<div class="row">

							@foreach (var article in Model)
							{
								if (article.Image.Length >3)
								{
									<div class="col-md-4 news-blog columns">
										<div class="product-block col-xs-4">
											<div class="product-block-inner align-items-center">
												<div class="blog-left">
													<div class="blog-image">
														<img src="@article.Image" alt="Latest Blog" title="Latest Blog"
															 class="img-responsive mw-100">

														<div class="post-image-hover"> </div>
														<p class="post_hover">
															<a class="icon zoom" title="Where can I get some?" href="#" data-lightbox="example-set">
																<i class="fa fa-search-plus"></i>
															</a>
															<a class="icon readmore_link" title="Click to view Read More" href="#">
																<i class="fa fa-link"></i>
															</a>
														</p>
													</div>
												</div>
												<div class="blog-right">
													<div class="date-comment blog-date-comment text-end">
														<div class="comment-wrapper">
															<div class="write-comment-count">
																<a href="#">
																	<i class="fa-solid fa-comment-dots"></i>
																	<span>1 Comments</span>
																</a>
															</div>
														</div>
													</div>
													<div class="blog-details">
														<h4 class="blog_title">
															<a href="ireland-qualification.html">Ireland Qualification</a>
														</h4>
														<div class="blog-desc">
															Lorem Ipsum is simply dummy text of the printing and typesetting
															industry. Lorem Ipsum has been the industry's
														</div>
														<div class="blog-border"></div>
														<div class="view-blog text-end">
															<div class="read-more">
																<a asp-controller="Home" asp-action="BlogDetails" asp-route-url="@article.Url" class="btn btn-default btn-info">read more</a>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>

								}
								
							}
				</div>
			</div>
		</div>
	</div>
	</div>
	</div>
</main>