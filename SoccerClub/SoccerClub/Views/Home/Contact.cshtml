@model SoccerClub.Models.ContactUs
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumb -->
<div class="breadcrumb-main">
    <div class="container">
        <div class="breadcrumb-container">
            <h2 class="page-title">Contact</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">
                        Home
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- main -->
<main>
    <div class="common-home">
        <div id="content" class="col">
            <div class="container">
                <div class="box-content">
                    <div class="row">
                        <div class="contact-section1">
                            <div class="contact-inner">
                                <span>contact with us</span>
                                <h2>Get In Touch With Authority</h2>
                                <p>
                                    Get probable winning tips from professional betting tipsters across all sports
                                    and offers from leading bookmakers! See how it works!
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row contact-section2">
                        <div class="col-sm-6">
                            <img src="~/assets_web/images/contact/contact.png" alt="" class="w-100">
                        </div>
                        <div class="col-sm-6">
                            <div class="contact-inner-right">
                                <form id="form-contact" asp-action="ContactUs">
                                    <fieldset>
                                        <div class="grp-1">
                                            <div class="grp-in-2">
                                                <span> First Name *</span>
                                                <input asp-for="FirstName" type="text"  value="" placeholder="Your Name"
                                                       class="form-control input-lg ui-autocomplete-input">
                                            </div>
                                            <div class="grp-in-2">
                                                <span> Last Name *</span>
                                                <input asp-for="LastName" type="text"  value="" placeholder="Last Name"
                                                       class="form-control input-lg ui-autocomplete-input" required>
                                            </div>
                                        </div>

                                        <div class="grp-1">
                                            <div class="grp-in-2">
                                                <span>Phone Number *</span>
                                                <input asp-for="PhoneNumber" type="number"  value="" placeholder="Phone Number"
                                                       class="form-control input-lg ui-autocomplete-input" required>
                                            </div>
                                            <div class="grp-in-2">
                                                <span>Email *</span>
                                                <input asp-for="Email" type="email"  value="" placeholder="Email"
                                                       class="form-control input-lg ui-autocomplete-input" required>
                                            </div>
                                        </div>
                                        <div class="grp-3">
                                            <span>Comment *</span>
                                            <input asp-for="Comment" type="text"  value="" placeholder="Comment"
                                                   class="form-control input-lg ui-autocomplete-input" required>
                                        </div>
                                        <div class="grp-1">
                                            <div class="grp-in-2">
                                                <button type="submit" class="btn-default">Confirm</button>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="col-xs-12 form-message">
                                            <div class="submitted">Your message has been sent successfully</div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="news mt-50 wow fadeInUp">
                    <div class="news-inner">
                        <div class="themabilitynewsletterblock">
                            <div class="themability-newsletter-form block-content box-content">
                                <div class="page-title toggled d-none">
                                    <h3>Newsletter</h3>
                                </div>
                                <div class="block_box">
                                    <div class="news-info">
                                        <div class="row">
                                            <div class="col-xl-6">
                                                <div class="newsletter_description_outer d-flex align-items-center">
                                                    <div class="icon-emails">
                                                        <i class="fa-solid fa-envelope"></i>
                                                    </div>
                                                    <div class="news-desc">
                                                        <div class="title-text">
                                                            <h3>Newsletter</h3>
                                                            <h3 class="d-none">Get Discount 30% Off</h3>
                                                        </div>
                                                        <div class="news-description">Get free 20% discount for all product on your first order.</div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xl-6 d-flex align-items-center news-right">
                                                <div class="newsletter_form">
                                                    <form action="#" method="post" id="form_themability_newsletter" data-oc-toggle="ajax">
                                                        <div class="subscribe-form">
                                                            <input type="email" name="themability_newsletter_usr_email" id="themability_newsletter_usr_email" placeholder="Enter Your E-mail.." class="form-control input-lg inputNew txtemail">
                                                            <button type="submit" data-bs-toggle="tooltip" title="" class="subscribe-btn btn-default">Subscribe</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--  -->
            <!--  -->
        </div>
    </div>
</main>

