@model IEnumerable<SoccerClub.Models.User>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    int sno=1;
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>List Of Users</h4>
                    @*<span>Datatable</span>*@
                </div>
            </div>
@*            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Table</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Datatable</a></li>
                </ol>
            </div>*@
        </div>
        <!-- row -->


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Users</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>Profile</th>
                                        <th>Name</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                 
                                    @foreach (var item in Model)
                                    {
                                        
                                        <tr>
                                            <td>@sno</td>
                                            <td><img class="rounded-circle" width="35" src="~/assets_admin/images/profile/small/pic1.jpg" alt=""></td>
                                            <td> @Html.DisplayFor(modelItem => item.FullName)</td>
                                            <td> @Html.DisplayFor(modelItem => item.Username)</td>
                                            <td><a href="javascript:void(0);"><strong> @Html.DisplayFor(modelItem => item.Email)</strong></a></td>
                                            <td><a href="javascript:void(0);"><strong> @Html.DisplayFor(modelItem => item.PhoneNo)</strong></a></td>
                                            <td>
                                                <div class="d-flex">
                                                    <a asp-controller="Users" asp-action ="Edit" asp-route-id="@item.UserId" class="btn btn-primary shadow btn-xs sharp me-1">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>
                                                    <a asp-controller="Users" asp-action="Details" asp-route-id="@item.UserId" class="btn btn-primary shadow btn-xs sharp me-1">
                                                        <i class="fa fa-user"></i>
                                                    </a>

                                                    <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                                </div>
                                            </td>
                                            
                                            
                                        </tr>

                                        sno++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>