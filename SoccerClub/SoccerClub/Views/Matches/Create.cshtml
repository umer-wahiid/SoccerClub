@model SoccerClub.Models.Match

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Schedule Match</h4>
                </div>
            </div>

        </div>
        <!-- row -->
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Team Form</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            <form asp-action="Create" method="post" enctype="multipart/form-data">

                                <div class="row">
                                    <div class="mb-3 col-md-10">
                                        <label>Date</label>
                                        <input asp-for="Date" class="form-control" placeholder="Date">
                                    </div>
                                    <div class="mb-3 col-md-10">
                                        <label>Time</label>
                                        <input asp-for="Time" class="form-control" placeholder="Time">
                                    </div>
                                    <div class="mb-3 col-md-10">
                                        <label>AwayTeam</label>
                                        <select asp-for="AwayTeam" class="form-control" asp-items="ViewBag.AwayTeamId"></select>
                                    </div>

                                    <div class="mb-3 col-md-10">
                                        <label>HomeTeam</label>
                                        <select asp-for="HomeTeamId" class="form-control" asp-items="ViewBag.HomeTeamId"></select>
                                    </div>
                                   
                                    <div class="mb-3 col-md-5">
                                        <label>Venue</label>
                                        <input asp-for="Venue" type="text" class="form-control">
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="mb-3 col-md-10">
                                        <label>Season</label>
                                        <input asp-for="Season" type="text" class="form-control">
                                    </div>
                                  <div class="row">
                                    <div class="mb-3 col-md-10">
                                            <label>League</label>
                                            <input asp-for="League" type="text" class="form-control">
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary">Add Product</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


























