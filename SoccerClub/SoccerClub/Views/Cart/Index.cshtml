@model List<Cart>

<h1>Shopping Cart</h1>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.product.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="AddToCart" asp-route-productId="@item.ProductId" asp-route-quantity="1">Add</a> |
                        <a asp-action="DecreaseQuantity" asp-route-productId="@item.ProductId" asp-route-quantity="1">Decrease</a> |
                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
